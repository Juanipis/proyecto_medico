{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Run Flutter Web Server",
        "type": "shell",
        "command": "flutter",
        "args": [
          "run",
          "-d",
          "web-server",
          "--web-hostname",
          "0.0.0.0",
          "--web-port",
          "3000"
        ],
        "presentation": {
          "reveal": "always",
          "panel": "new"
        },
        "group": {
          "kind": "build",
          "isDefault": true
        }
      }
    ]
  }